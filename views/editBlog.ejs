<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head.ejs') %>
    <title>Decode Blog</title>
  </head>
  <body>
    <%- include('partials/header.ejs') %>

    <div class="container">
      <div class="main mainBlog">
        <div class="main-title">
          <form
            action="/api/posts/edit"
            method="POST"
            enctype="multipart/form-data"
          >
            <h1 class="title">Редактировать блог</h1>
            <input type="hidden" value="<%=post._id%>" name="id" />
            <input
              type="text"
              placeholder="Введите заголовок блога"
              name="title"
              value="<%=post.title %>"
            />

            <select name="category" id="categories">
              <option value="">Выберите категорию</option>
              <% categories.forEach(category => { if(category.id ==
              post.category) { %>
              <option value="<%=category._id %>" selected>
                <%=category.name %>
              </option>
              <% } else { %>
              <option value="<%=category._id %>"><%=category.name %></option>
              <% } }) %>
            </select>

            <input type="file" id="upload" name="image" hidden />
            <label for="upload">Выберите картинку</label>

            <input
              type="text"
              placeholder="Введите описание блога"
              id="description"
              name="description"
              value="<%=post.description %>"
            />
            <br />
            <button>Редактировать</button>
          </form>
        </div>
      </div>
    </div>

    <%- include('partials/scripts.ejs') %>
  </body>
</html>
